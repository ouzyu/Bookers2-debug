<div id="star_<%= book.id %>"></div>
<script>
  $(document).on('turbolinks:load', function() {
    let elem = document.querySelector('#star_<%= book.id %>');
    if (elem == null) return;

    elem.innerHTML = "";
    let opt = {
      starOn: "<%= asset_path('star-on.png') %>",
      starOff: "<%= asset_path('star-off.png') %>",
      half: false,
      score: "<%= book.star %>",
      readOnly: true,
    };
    raty(elem, opt);
  });
</script>