<h2>Books search for "<%= word %>"</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tags</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image, size: '50x50' %></td>
        <td><%= link_to book.title, book %></td>
        <td><%= book.body %></td>
        <td>
          <% book.tags.each do |tag| %>
            <p><%= link_to tag.tag_name, search_tag_path(word: tag.tag_name) %></p>
          <% end %>
        </td>
        <td id="favorite_buttons_<%= book.id %>">
          <%= render "favorites/btn",book: book %>
        </td>
        <td>
          コメント数:<span id="comments_count"><%= book.book_comments.count %></span>
        </td>
        <td><%= render "books/staticRate.html.erb",book: book %></td>
        <td>閲覧数:<%= book.impressionist_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>